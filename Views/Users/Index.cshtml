@model IEnumerable<MySelf.Models.User>

@{
    ViewBag.Title = "Index";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Om Patel - Personal Website</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;700;800&display=swap" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Plus Jakarta Sans', sans-serif;
        }

        /* Full-screen hero background */
        .hero-header {
            height: 100vh;
            background: url('@Url.Content("~/Content/IMG_0304 (1).png")') no-repeat center center/cover;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            z-index: 1;
        }

        .hero-header::before {
            content: "";
            position: absolute;
            inset: 0;
            background-color: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(5px);
            z-index: -1;
        }

        /* Glassmorphism content card */
        .glass-card {
            background: rgba(255, 255, 255, 0.15);
            border-radius: 20px;
            backdrop-filter: blur(12px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.37);
            padding: 2.5rem;
            max-width: 500px;
            width: 90%;
            z-index: 2;
        }

        .profile {
            width: 180px;
            height: 180px;
            border-radius: 50%;
            overflow: hidden;
            border: 4px solid white;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.4);
            margin: 0 auto 1rem auto;
        }

        .profile-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .btn-outline-light:hover {
            background-color: white;
            color: black;
        }
    </style>
</head>
<body>
    <!-- Hero Header Section -->
    <header class="hero-header">
        <div class="glass-card">
            <div class="profile">
                <img class="profile-img" src="@Url.Content("~/Content/IMG_0304 (1).png")" alt="Om Patel" />
            </div>
            <h1 class="display-5 fw-bold">Om Patel</h1>
            <p class="lead mb-4">Welcome to my personal website</p>
            <div class="d-flex justify-content-center gap-3">
                <a class="btn btn-primary px-4 py-2" @Html.ActionLink("Register", "Create", "Users", null, new { @class = "nav-link" })</a>

            </div>
        </div>
    </header>

    <!-- Optional About Section -->
    <section class="py-5 bg-light text-center">
        <div class="container px-4">
            <h2 class="fw-bold mb-3">About Me</h2>
            <p class="text-muted mb-3">Hi! I'm Om Patel. I design, develop, and deploy modern websites.</p>
            <div class="d-flex justify-content-center fs-4 gap-4">
                <a class="text-dark" href="#"><i class="bi bi-instagram"></i></a>
                <a class="text-dark" href="#"><i class="bi bi-linkedin"></i></a>
                <a class="text-dark" href="#"><i class="bi bi-github"></i></a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-4 mt-auto">
        <div class="container">
            <div class="small">© Om Patel 2025 · <a href="#" class="text-white-50 text-decoration-none">Privacy</a> · <a href="#" class="text-white-50 text-decoration-none">Terms</a></div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
